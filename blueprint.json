{
  "software": {
    "base": {
      "name": "enginesdbase",
      "framework": "base_c",
      "deployment_type": "worker",
      "http_protocol": "https_and_http",
      "memory": {
        "required": 256
      }
    },
    "scripts": {
      "start": {
        "language": "sh",
        "content": "#!/bin/sh\r\n\r\nsleep 3600"
      }
    },
    "external_repositories": [
      {
        "source": "\"deb [arch=amd64] https://apt.releases.hashicorp.com $(lsb_release -cs) main\"",
        "key": "https://apt.releases.hashicorp.com/gpg"
      }
    ],
    "system_packages": [
      {
        "package": "consul"
      },
      {
        "package": "rsyslog"
      },
      {
        "package": "slapd"
      },
      {
        "package": "prometheus"
      },
      {
        "package": "sasl2-bin"
      },
      {
        "package": "libsasl2-2"
      },
      {
        "package": "libsasl2-modules-ldap"
      }
    ],
    "service_configurations": [
      {
        "publisher_namespace": "EnginesSystem",
        "type_path": "filesystem/local/filesystem",
        "variables": {
          "service_name": "_Engines_Builder(engine_name)",
          "engine_path": "/data",
          "permissions": "rw",
          "user": "_Engines_Builder(cont_user_id)",
          "group": "_Engines_Builder(data_gid)",
          "fw_user": "_Engines_Builder(cont_user_id)",
          "exclude_from_backup": "false"
        }
      }
    ],
    "template_files": [
      {
        "path": "consula",
        "language": "text",
        "content": "{\n  \"server\": true,\n  \"bootstrap_expect\": 1,\n  \"data_dir\": \"/home/fs/data/consula\",\n  \"ui_dir\": \"/home/fs/data/consula-ui\",\n  \"ui\": true,\n  \"client_addr\": \"0.0.0.0\",\n  \"bind_addr\": \"$host\",\n   \"encrypt\" : :_Engines_Environment(consul_secret):\n}"
      }
    ],
    "capabilities": {
      "allow": "all",
      "selected": [
        "SETPCAP",
        "MKNOD",
        "AUDIT_WRITE",
        "CHOWN",
        "NET_RAW",
        "DAC_OVERRIDE",
        "FOWNER",
        "FSETID",
        "KILL",
        "SETGID",
        "SETUID",
        "NET_BIND_SERVICE",
        "SYS_CHROOT",
        "SETFCAP"
      ]
    }
  },
  "schema": {
    "type": "app_blueprint",
    "version": {
      "major": 0,
      "minor": 1
    },
    "origin": "Engines Developer Studio 0.3"
  }
}